{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node", "vitest/globals"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"]
}
